{
  "name": "blog",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "5.2.0"
  },
  "scripts": {
    "start": "hexo server",
    "secret": "node ./helper/replace_secret.js",
    "secret:dev": "yarn nodemon --watch _config_base.yml ./helper/replace_secret.js",
    "build": "yarn build:pre && hexo g",
    "build:pre": "hexo clean && yarn secret",
    "deploy": "yarn build:pre && hexo deploy",
    "update": "node ./helper/update_lib.js",
    "clean": "hexo clean",
    "restart": "yarn clean && yarn start"
  },
  "dependencies": {
    "hexo": "^5.2.0",
    "hexo-deployer-git": "^2.1.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-searchdb": "^1.3.3",
    "hexo-generator-seo-friendly-sitemap": "^0.2.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-pangu": "^0.2.0",
    "hexo-related-popular-posts": "^5.0.1",
    "hexo-renderer-markdown-it": "^5.0.0",
    "hexo-renderer-stylus": "^2.0.1",
    "hexo-server": "^2.0.0",
    "hexo-symbols-count-time": "^0.7.1"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.6",
    "npm-check-updates": "^10.2.2"
  }
}
